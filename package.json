{
  "name": "f95list-ext",
  "private": false,
  "type": "module",
  "author": {
    "email": "hunteraulo@pm.me",
    "name": "Hunteraulo"
  },
  "license": "UNLICENSED",
  "description": "Extension de F95 France permettant de lister les jeux",
  "repository": {
    "type": "git",
    "url": "https://github.com/Hunteraulo1/f95list-ext"
  },
  "version": "1.3.9",
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    }
  },
  "scripts": {
    "dev": "vite dev",
    "build": "npm run build:chrome && npm run build:firefox",
    "build:chrome": "BUILD_MODE=chrome vite build",
    "build:firefox": "BUILD_MODE=firefox vite build",
    "build:firefox:push": "node loadEnv.cjs",
    "build:push": "npm run build && rm -rf builds/artifacts && npm run build:firefox:push && node artifacts.cjs",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test:unit": "vitest",
    "lint": "bunx @biomejs/biome lint --write .",
    "format": "bunx @biomejs/biome format --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@eslint/js": "^9.7.0",
    "@sveltejs/kit": "^2.5.18",
    "@sveltejs/vite-plugin-svelte": "^3.1.1",
    "@types/chrome": "0.0.268",
    "@types/webextension-polyfill": "0.10.7",
    "archiver": "7.0.1",
    "autoprefixer": "^10.4.19",
    "bits-ui": "^0.21.12",
    "clsx": "^2.1.1",
    "cmdk-sv": "0.0.18",
    "cross-env": "7.0.3",
    "dotenv": "16.4.5",
    "mode-watcher": "^0.4.0",
    "postcss": "^8.4.39",
    "postcss-import": "^16.1.0",
    "svelte": "4.2.18",
    "svelte-check": "^3.8.4",
    "svelte-radix": "^1.1.0",
    "sveltekit-adapter-chrome-extension": "^2.0.1",
    "tailwind-merge": "^2.4.0",
    "tailwind-variants": "^0.2.1",
    "tailwindcss": "^3.4.6",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.3",
    "typescript": "^5.5.3",
    "valibot": "^0.36.0",
    "vite": "^5.3.4",
    "vite-plugin-svelte": "^3.0.1",
    "vite-plugin-tailwind-purgecss": "^0.3.3",
    "vitest": "^2.0.3"
  },
  "trustedDependencies": ["@biomejs/biome", "@deepkit/type-compiler", "@sveltejs/kit", "esbuild", "svelte-preprocess"]
}
