{
  "name": "F95 France - Extension",
  "description": "Extension of F95 France community",
  "author": "Hunteraulo",
  "version": "1.6.2",
  "manifest_version": 3,
  "icons": {
    "16": "favicon_16.png",
    "32": "favicon_32.png",
    "64": "favicon_64.png",
    "128": "favicon_128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "favicon_16.png",
      "32": "favicon_32.png",
      "64": "favicon_64.png",
      "128": "favicon_128.png"
    },
    "default_title": "F95 France - Extension"
  },
  "permissions": ["storage", "unlimitedStorage", "activeTab"],
  "content_scripts": [
    {
      "matches": [
        "*://f95zone.to/sam/latest_alpha/*",
        "*://f95zone.to/threads/*",
        "*://lewdcorner.com/latest-updates/*",
        "*://lewdcorner.com/threads/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
