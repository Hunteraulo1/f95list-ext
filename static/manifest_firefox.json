{
  "name": "F95 France - Extension",
  "description": "Extension de F95 France",
  "author": "Hunteraulo",
  "version": "1.0.3",
  "manifest_version": 2,
  "icons": {
    "128": "favicon.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{9f7488b3-d704-4894-bac8-5dc3068fd6b9}",
      "strict_min_version": "79.0"
    }
  },
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "128": "favicon.png"
    },
    "default_title": "F95 France - Extension"
  },
  "permissions": [
    "storage",
    "unlimitedStorage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://f95zone.to/sam/latest_alpha/*",
        "*://f95zone.to/threads/*",
        "*://lewdcorner.com/latest-updates/*",
        "*://lewdcorner.com/threads/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
